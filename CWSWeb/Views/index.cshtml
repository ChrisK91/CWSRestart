@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<CWSWeb.Helper.CachedVariables.Statistics>
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>A CubeWorld Server Status Page</title>

    <script src="/static/js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="/static/js/Chart.min.js" type="text/javascript"></script>
    <script src="/static/js/moment.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            @if (Model.Keys != null && Model.PlayerStats != null && Model.Keys.Length > 0 && Model.Keys[0] != null)
            { 
                <text>
            GeneratePlayerActivity();
                </text>            
            }
        });

        function GeneratePlayerActivity() {
            $.getJSON("/API/stats/playeractivity", function (data) {
                var ctxActivity = document.getElementById("activity").getContext("2d");
                new Chart(ctxActivity).Line({
                    labels: GetDatesFromStrings(data.labels),
                    datasets: [{
                        data: data.data,
                        fillColor: "#FF955E",
                        strokeColor: "#FF5600",
                        pointStrokeColor: "#fff",
                        pointFillColor: "#B28053"
                        }]
                }, {
                    scaleStepWidth: 1,
                    scaleLineColor: "#002550"
                });
            });
        }

        function GetDatesFromStrings(data) {
            var ret = Array(data.length);

            for(var i = 0; i < data.length; i++)
            {
                tmp = new moment(parseInt(data[i].substr(6)));
                ret[i] = tmp.format("H:mm");
            }

            return ret;
        }
    </script>

    <style type="text/css" media="screen">
        /*
            Light-Orange: #FFE28B
            Dark-Orange: #FF5600
            Blue: #002550
            Brown: #B28053
            */
        body {
            font-family: 'Segoe UI', Calibri, Verdana, Arial, sans-serif;
            background-color: #FFE28B;
            padding: 0px;
            margin: 0px;
        }

        a {
            text-decoration: none;
            color: #002550;
        }

        h2 {
            font-weight: 200;
        }

            a:hover, a:active, a:focus {
                text-decoration: underline;
                color: #002550;
            }

        header {
            display: block;
            width: 100%;
            margin: 0px;
            background-color: #FF5600;
            border-bottom: 3px solid #002550;
            position: fixed;
            top: 0px;
            box-shadow: 0 0 8px #808080;
            min-width: 800px;
        }

            header h1 {
                display: block;
                width: 760px;
                font-weight: 100;
                padding: 20px;
                margin: 0 auto;
            }


        footer {
            width: 100%;
            background-color: #B28053;
            position: fixed;
            bottom: 0px;
            box-shadow: 0 0 8px #808080;
            min-width: 800px;
        }

            footer p {
                color: #f3f3f3;
                display: block;
                width: 760px;
                margin: 0 auto;
                padding: 5px 20px;
            }

        div#container {
            margin-top: 100px;
            margin-bottom: 50px;
            width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        ul.table {
            list-style: none;
            display: table;
            width: 100%;
            margin: 0px auto;
            padding: 0px;
            border-spacing: 10px;
        }

            ul.table li {
                display: table-cell;
                border: 1px solid #808080;
                width: 28%;
                margin: 5px;
                box-shadow: 0 0 8px #808080;
            }

                ul.table li h6 {
                    display: block;
                    margin: 0px;
                    left: 0px;
                    background-color: #B28053;
                    padding: 0.5em 0.3em;
                    font-size: 1.2em;
                    font-weight: 200;
                    color: #f3f3f3;
                }

                ul.table li p {
                    display: block;
                    width: 80%;
                    text-align: right;
                    padding: 10%;
                    padding-top: 0px;
                    padding-bottom: 0px;
                    margin: 0px;
                    font-size: 2em;
                    font-weight: lighter;
                }

            canvas {
                display: block;
                margin: 0 auto;
                box-shadow: 0 0 8px #808080;
            }
    </style>
</head>
<body>
    <header>
        <h1>CubeWorld Server Statistics</h1>
    </header>
    <div id="container">
        <section>
            @if (Model.IsAlive)
            { 
                <ul class="table">
                    <li><h6>Active players</h6><p>@Model.PlayerStats.Current.ToString()</p></li>
                    <li><h6>Total players</h6><p>@Model.PlayerStats.Total.ToString()</p></li>
                    <li><h6>Runtime</h6><p>@Model.FormatedRuntime</p></li>
                </ul>
                
                if (Model.Keys != null && Model.ActivePlayers != null && Model.Keys.Length > 0 && Model.Keys[0] != null)
                { 
                    <h2>Player activity</h2>
                    <canvas width="750" height="350" id="activity"></canvas>
                }
            }
            else { 
                <h2>The server is offline</h2>
            }
        </section>
    </div>
    <footer><p>This data is gathered using <a href="http://chrisk91.github.io/CWSRestart/">CWSRestart</a>. Underlying data is updated every five seconds.</p></footer>
</body>
</html>