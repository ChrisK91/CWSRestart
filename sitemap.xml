<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for post in site.posts %}
    <url>
        <loc>https://github.com/ChrisK91/CWSRestart{{ post.url | remove: 'index.html' }}</loc>
        <lastmod>{{ post.date | date:"%F" }}</lastmod>
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.topic == nil %}
    <url>
        <loc>https://github.com/ChrisK91/CWSRestart{{ page.url | remove: 'index.html' }}</loc>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
</urlset>
